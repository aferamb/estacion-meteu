<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destino"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text_primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usar suscripciÃ³n"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <Switch
                android:id="@+id/sw_use_subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suscripciones guardadas"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_primary" />
        <Spinner
            android:id="@+id/spinner_subs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/background_secondary"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o Topic manual"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_primary" />
        <EditText
            android:id="@+id/et_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="ej. sensors/street/sensorID"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clave de alerta"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_primary" />
        <EditText
            android:id="@+id/et_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="WTH001"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensaje JSON (opcional)"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_primary" />
        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:hint='{"alerta":"WTH002","info":"..."}'
            android:layout_marginTop="6dp" />

        <Button
            android:id="@+id/btn_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publicar"
            android:layout_marginTop="14dp"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
