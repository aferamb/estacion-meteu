<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <EditText
        android:id="@+id/et_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="start (yyyy-MM-ddHH:mm:ss)"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="end (yyyy-MM-ddHH:mm:ss)"
        app:layout_constraintTop_toBottomOf="@id/et_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/sp_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:prompt="@string/prompt_filter"
        app:layout_constraintTop_toBottomOf="@id/et_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/ll_op_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/sp_filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <Spinner
            android:id="@+id/sp_op"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_op_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OperaciÃ³n"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="value (busqueda)"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_sort_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordenar por ______ ASC/DESC"
        app:layout_constraintTop_toBottomOf="@id/ll_op_value"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/sp_sortby"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_sort_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/ll_order_offset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/sp_sortby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <Spinner
            android:id="@+id/sp_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_limit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="limit"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/ll_order_offset"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar"
        app:layout_constraintTop_toBottomOf="@id/ll_order_offset"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_select_columns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar columnas"
        app:layout_constraintTop_toBottomOf="@id/btn_query"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_readings_query"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_select_columns"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_readings_query"
                    layout="@layout/item_reading_header" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_readings_query"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </HorizontalScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
